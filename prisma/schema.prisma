model marcas {
  id_marca                   Int        @id @default(autoincrement())
  nombre                     String
  descripcion                String?
  logo                       String?    @db.Text
  estado                     estado     @default(ACTIVO)
  fecha_creacion             DateTime   @default(now())
  fecha_ultima_actualizacion DateTime   @default(now()) @updatedAt
  catalogo                   catalogo[]
  modelos                    modelos[]
}

model modelos {
  id_modelo                  Int        @id @default(autoincrement())
  nombre                     String
  descripcion                String?
  id_marca                   Int
  marca                      marcas     @relation(fields: [id_marca], references: [id_marca], onDelete: NoAction, onUpdate: NoAction, map: "fk_modelo_marca")
  estado                     estado     @default(ACTIVO)
  fecha_creacion             DateTime   @default(now())
  fecha_ultima_actualizacion DateTime   @default(now()) @updatedAt
  catalogo                   catalogo[]

  @@index([id_marca])
}

model catalogo {
  id_catalogo                Int                             @id @default(autoincrement())
  id_categoria               Int
  categoria                  categorias                      @relation(fields: [id_categoria], references: [id_categoria])
  codigo                     String
  codigo_proveedor           String?
  nombre                     String
  descripcion                String?
  cantidad_minima            Int?                            @default(0) // stock mínimo
  cantidad_maxima            Int?                            @default(0) // stock máximo
  lead_time_dias             Int?                            // Días que tarda el proveedor
  demanda_promedio_diaria    Decimal?                        @db.Decimal(10, 2) // Consumo promedio/día
  stock_seguridad            Int?                            // Buffer de seguridad
  punto_reorden              Int?                            // ROP = (Demanda * Lead Time) + SS
