  codigo_generacion  String? @unique @db.Char(36) // UUID v4 del DTE
  numero_control     String? @unique @db.VarChar(31) // DTE-XX-YYYYYYYY-ZZZZZZZZZZZZZZZ
  dte_json           String? @db.Text // JSON completo del DTE
  dte_firmado        String? @db.Text // DTE firmado (JWS)
  sello_recepcion    String? @db.VarChar(50) // Sello de MH (40 chars)
  fecha_recepcion_mh DateTime? // Fecha de procesamiento MH
  codigo_msg_mh      String? @db.VarChar(10) // Código respuesta MH
  descripcion_msg_mh String? @db.VarChar(500) // Mensaje MH
  observaciones_mh   String? @db.Text // Observaciones de MH

  // === ESTADO DEL DTE ===
  estado_dte         estado_dte @default(BORRADOR)
  intentos_dte       Int @default(0) // Intentos de transmisión
  ultimo_error_dte   String? @db.Text // Último error

  // === ESTADO DE LA FACTURA ===
  estado             estado_factura_directa @default(ACTIVO)
  estado_pago        estado_pago_factura @default(PAGADO) // Solo contado

  // === OBSERVACIONES ===
  observaciones      String? @db.Text

  // === DATOS DE ANULACIÓN (cuando se invalida el DTE) ===
  anulacion_codigo_generacion  String? @unique @db.Char(36) // UUID del evento de anulación
  anulacion_sello_recepcion    String? @db.VarChar(50) // Sello de MH de la anulación
  anulacion_json               String? @db.Text // JSON del evento de anulación
  anulacion_firmada            String? @db.Text // Evento firmado (JWS)
  fecha_anulacion              DateTime? // Fecha de procesamiento de anulación
  anulacion_motivo             String? @db.VarChar(300) // Motivo de anulación
  anulacion_codigo_msg         String? @db.VarChar(10) // Código respuesta MH anulación
  anulacion_descripcion_msg    String? @db.VarChar(500) // Mensaje MH anulación

  // === SUCURSAL Y USUARIO ===
  id_sucursal        Int
  sucursal           sucursales @relation(fields: [id_sucursal], references: [id_sucursal], onDelete: NoAction, onUpdate: NoAction, map: "fk_factura_directa_sucursal")
  id_usuario         Int
  usuario            usuarios @relation(fields: [id_usuario], references: [id_usuario], onDelete: NoAction, onUpdate: NoAction, map: "fk_factura_directa_usuario")

  // === AUDITORÍA ===
  fecha_actualizacion DateTime @default(now()) @updatedAt

  // === RELACIONES ===
  detalles           facturaDirectaDetalle[]

  // === ÍNDICES ===
  @@index([numero_factura])
  @@index([id_cliente_directo])
  @@index([id_tipo_factura])
  @@index([id_sucursal])
  @@index([estado_dte])
  @@index([fecha_creacion])
  @@index([codigo_generacion])
  @@index([cliente_nit])
}

// Detalle de líneas de factura directa
model facturaDirectaDetalle {
  id_detalle         Int @id @default(autoincrement())

  // === RELACIÓN CON FACTURA ===
  id_factura_directa Int
  facturaDirecta     facturaDirecta @relation(fields: [id_factura_directa], references: [id_factura_directa], onDelete: Cascade, onUpdate: NoAction, map: "fk_factura_directa_detalle")

  // === DATOS DEL ÍTEM ===
  num_item           Int // Número de línea (1, 2, 3...)
  codigo             String? @db.VarChar(50) // SKU/Código del producto
  nombre             String @db.VarChar(200) // Nombre del producto/servicio
  descripcion        String? @db.Text // Descripción adicional
  nota               String? @db.Text // Nota adicional

  // === CANTIDADES Y PRECIOS ===
  cantidad           Decimal @db.Decimal(12, 4)
  uni_medida         Int @default(99) // Código unidad de medida (99=Otro)
  precio_unitario    Decimal @db.Decimal(12, 4)
  precio_sin_iva     Decimal @default(0) @db.Decimal(12, 4)
  precio_con_iva     Decimal @default(0) @db.Decimal(12, 4)

  // === TIPO DE DETALLE (determina tratamiento fiscal) ===
  tipo_detalle       tipo_detalle_factura @default(GRAVADO)

  // === VENTAS POR TIPO ===
  venta_gravada      Decimal @default(0) @db.Decimal(12, 2)
  venta_exenta       Decimal @default(0) @db.Decimal(12, 2)
  venta_nosujeto     Decimal @default(0) @db.Decimal(12, 2)
  venta_nograbada    Decimal @default(0) @db.Decimal(12, 2)

  // === CÁLCULOS ===
  subtotal           Decimal @default(0) @db.Decimal(12, 2)
  descuento          Decimal @default(0) @db.Decimal(12, 2)
  iva                Decimal @default(0) @db.Decimal(12, 2) // IVA del ítem
  total              Decimal @default(0) @db.Decimal(12, 2)

  // === RELACIÓN CON CATÁLOGO (opcional) ===
  id_catalogo        Int?
  catalogo           catalogo? @relation(fields: [id_catalogo], references: [id_catalogo], onDelete: NoAction, onUpdate: NoAction, map: "fk_factura_directa_detalle_catalogo")

  // === RELACIÓN CON DESCUENTO (opcional) ===
  id_descuento       Int?

  // === AUDITORÍA ===
  fecha_creacion     DateTime @default(now())

  // === ÍNDICES ===
  @@index([id_factura_directa])
  @@index([id_catalogo])
}
